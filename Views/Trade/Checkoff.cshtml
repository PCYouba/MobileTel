@model MobileTel.Trade.Models.TradeInfo
@{
    ViewBag.Title = "第三方代扣";
}

@section ForHead{
    <link rel="stylesheet" href="~/css/TelSms.css" />
}

@section title{
    @Html.ActionLink("首页", "UserLogin", "Users")>>第三方代扣
}


@using (Html.BeginForm("Checkoff", "Trade", FormMethod.Post))
{
    <div id="frame">
        手机号码:<input type="text" id="mobileNum" name="mobileNum" class="common" value="@ViewBag.mobileNum"readonly/>
        <br /><br /><br />
        消费金额: <input type="text" id="paymoney" name="paymoney" class="common" />
        <span class="warning">@ViewBag.hintmoney</span>
        <br /><br /><br />
        代扣商家:
        <div id="Check" name="Check" >
            @Html.DropDownListFor(Model => Model.actionName, (IEnumerable<SelectListItem>)ViewBag.ListItems)

        </div>
            
        <div id="button">
            <input type="submit" value="确定" />
            <input type="reset" value="重置" />
            @Html.ActionLink("返回主菜单", "Center", "Trade")
        </div>
    </div>
}


