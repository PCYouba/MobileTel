
@{
    ViewBag.Title = "预存话费";
}

@section ForHead{
    <link rel="stylesheet" href="~/css/Pay.css" />
}

@section title{
    @Html.ActionLink("首页", "UserLogin", "Users")>>预存话费
}


@using (Html.BeginForm("Pay", "Trade", FormMethod.Post))
{
    <div id="frame">
        手机号码:<input type="text" id="mobileNum" name="mobileNum" class="common"value=" @ViewBag.mobileNum "readonly >
        <span class="warning">@ViewBag.hintNum</span>
        <br /><br /><br />
        预存金额: <input type="text" id="paymoney" name="paymoney" class="common" />
        <span class="warning">@ViewBag.hintmony</span>
        <br /><br /><br />

        <div id="button">
            <input type="submit" value="确定" />
            <input type="reset" value="重置" />
            @Html.ActionLink("返回主菜单", "Center", "Trade")
        </div>
    </div>
}
 