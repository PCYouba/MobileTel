@model MobileTel.Trade.Models.TradeInfo
@{
    ViewBag.Title = "通话/发短信";
}

@section ForHead{
    <link rel="stylesheet" href="~/css/TelSms.css" />
}

@section title{
    @Html.ActionLink("首页", "UserLogin", "Users")>>通话/发短信
}


@using (Html.BeginForm("TelSms", "Trade", FormMethod.Post))
{
    <div id="frame">
        手机号码:<input type="text" id="mobileNum" name="mobileNum" class="common" value=" @ViewBag.mobileNum "readonly/>
        <span class="warning">@ViewBag.hintNum</span>
        <br /><br /><br />
        消费金额: <input type="text" id="telmoney" name="telmoney" class="common" />
        <span class="warning">@ViewBag.hintpass</span>
        <br /><br /><br />
        消费类型:@Html.RadioButtonFor(Model => Model.actionName, "0")通话 @Html.RadioButtonFor(Model => Model.actionName, "1")发短信


        <div id="button">
            <input type="submit" value="确定" />
            <input type="reset" value="重置" />
            @Html.ActionLink("返回主菜单", "Center", "Trade")
        </div>
    </div>
}
